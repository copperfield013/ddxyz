@import 'iconfont.wxss';
page{
  background-color: #fff;
}
.container{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.container-row{
  position: absolute;
  left: 0;
  right: 0;
}
.bottom-menu{
  bottom:0;
  height:30px;
  display:flex;
  flex-direction:row;
}
.bottom-menu>view{
  width:50%;
  height:30px;
  line-height:30px;
  font-size:25px;
  border-radius:0;
  text-align:center;
  border: 1px solid #ccc;
}
#btn-activity-add{
  border-right: 1px solid #ccc;
}
#wrapper{
  position: absolute;
  top: 0;
  bottom: 30px;
  width: 100%;
}

.scroll-view-item{
  width: 100%;
  display: block;
  height: 100px;
}
.bc_green{
  background-color: green;
}
.bc_red{
  background-color: red;
}

.bc_yellow{
  background-color: yellow;
}

.bc_blue{
  background-color: blue;
}
